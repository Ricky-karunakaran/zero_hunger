@page
@model ZeroHunger.Pages.ResetPasswordModel
@{
	@if (User.Identity.IsAuthenticated)
{
    <head>
  	<title>Reset Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="css/style.css">

	</head>
	<body>
	<section class="">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-2">
				<br>
					<h2 class="heading-section"><b>Reset Password</b></h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
		      	<div class="icon d-flex align-items-center justify-content-center">
		      		<span class="fa fa-user-o"></span>
		      	</div>
		      	<!--h3 class="text-center mb-4">Have an account?</h3-->
						<form method="post" class="login-form">
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>
						
            <input asp-for="userEmail" type="hidden" />
		      		<div class="form-group">
					  <label asp-for="password" style="display:none;"></label>
		      		<input asp-for="password" type="password" class="form-control rounded-left" placeholder="New Password" required>
					</div>
					<span class="text-danger" asp-validation-for="forgotUser.UserPwd"></span>
	            <div class="form-group d-flex">
				<label asp-for="password" style="display:none;"></label>
	              <input type="password" asp-for="password" class="form-control rounded-left" placeholder="Confirm New Password" required>
	            </div>
				<span class="text-danger" asp-validation-for="forgotUser.UserPwd"></span>
	            <div class="form-group">
	            	 <input type="submit" value="Reset Password" class="btn btn-primary form-control" />
					 @if (ViewData["Message"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewData["Message"]");
            };
        </script>
    }
	            </div>
	          </form>
	        </div>
				</div>
			</div>
		</div>
	</section>
	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>
		</body>
	}
	else
	{
		 <script>
     alert("Sorry, you are not eligible to enter this page.");
     location.href = '/Index';
     </script>
	}
}

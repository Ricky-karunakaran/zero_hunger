@page
@using ZeroHunger.Model
@model ZeroHunger.Pages.Deliveries.CreateModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Delivery Request</h2>
            <hr/>
        </div>
        <!--<div asp-validation-summary="All"></div>-->
        <div class="mb-3">
            <!--<label asp-for="Delivery.User.UserID"></label>-->
            Volunteer Name
            <select asp-for="Delivery.VolunteerID"  asp-items="Model.VolunteerList" class="form-control">-->
            <option>--Select the Volunteer--</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Delivery.DeliveryTime"></label>
            <input asp-for="Delivery.DeliveryTime" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Delivery.DeliveryStatus"></label>
            <select class="form-control" asp-for="Delivery.DeliveryStatus" asp-items="Html.GetEnumSelectList<DeliveryStatus>()"></select>
        </div>
        <div class="mb-3">
            Receiver Name
            <select id="receiver" asp-for="Delivery.ReceiverID" asp-items="Model.ReceiverList" class="form-control">
                <option>--Select the Receiever--</option>
            </select>
        </div>
        <div class="mb-3">
            Receiver Phone
            <span id="receiverphone" class="form-control">----</span>
        </div>
        <div class="mb-3">
            Receiver Address
            <div id="receiveradrs1" class="form-control">----</div>
            <div id="receiveradrs2" class="form-control">----</div>
        </div>
        <div class="mb-3">
            Delivery Item
            <select id="deliveryitem" asp-for="DeliveryItem.DryFoodID" asp-items="Model.DeliveryItemList" class="form-control">
                <option>--Select Delivery Item--</option>
            </select>
        </div>
        <div class="mb-3">
            Quantity
            <input id="quantity" asp-for="DeliveryItem.Quantity" min="1" max="1" class="form-control" />
        </div>
        <button type="button" asp-page-handler="AddDeliveryItem" class="btn btn-success mx-2">Add Delivery Item &nbsp;<i class="bi bi-plus-square-fill"></i></button>
        <br /><br />
        <table class="table table-striped table-bordered" id="view_added_item">
            <thead>
                <tr style="background-color:#fb6d6d">
                    <th>Delivery Item Name</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>  
     </div>
</form>

@section Scripts{
    <script src="~/js/DeliveryItem.js"></script>
        
    </script>
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

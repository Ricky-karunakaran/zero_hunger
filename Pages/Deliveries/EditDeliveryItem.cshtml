@model ZeroHunger.Pages.Deliveries.EditDeliveryItemModel

<br />
<h2 class="text-info">Edit Delivery Item</h2>
<br />
<form method="post">
        <input hidden asp-for="DeliveryItem.ItemID"/>
        <input hidden asp-for="DeliveryItem.DeliveryID"/>
        <div class="mb-3">
        Delivery Item
        <select id="deliveryitem" asp-for="DeliveryItem.DryFoodID" asp-items="Model.DeliveryItemList" class="form-control">
            <option>--Select Delivery Item--</option>
        </select>
        </div>
        <div class="mb-3">
            Quantity
            <input id="quantity" asp-for="DeliveryItem.Quantity" min="1" class="form-control" />
        </div>
         <button type="submit" class="btn btn-primary" style="width:150px;">Edit Delivery Item</button>
        <a asp-page="DeliveryItem" asp-route-id="DeliveryItem.DeliveryID" class="btn btn-secondary" style="width: 150px;">Back to List</a> 
</form>


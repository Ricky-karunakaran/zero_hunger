<head>
    <style>
        .a{
            display:inline-block;
            float:right;
        }
    </style>
</head>

@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="nav-link nav-item" style="color:#ff9494;" asp-page="/login">Login</a>
   <a class="nav-link nav-item" style="color:#ff9494;" asp-page="/UserType">Register</a>
}
